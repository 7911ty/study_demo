<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DialogActivity">

    <com.example.base.view.TitleSpaceView
        android:id="@+id/title_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sec_bt_1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@color/red"
        android:text="拉起标题内容弹窗"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_space" />

    <Button
        android:id="@+id/sec_bt_2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="拉起列表弹窗"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sec_bt_1" />

    <Button
        android:id="@+id/sec_bt_3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="拉起多选弹窗"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sec_bt_2" />

    <Button
        android:id="@+id/sec_bt_4"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="拉起单选弹窗"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/sec_bt_3" />

</androidx.constraintlayout.widget.ConstraintLayout>