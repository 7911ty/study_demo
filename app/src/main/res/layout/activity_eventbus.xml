<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.studydemo.view.TitleSpaceView
        android:id="@+id/title_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bus_btn"
        android:layout_below="@+id/title_space"
        android:layout_width="wrap_content"
        android:text="去EventBus2页面"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="请输入内容..."
        android:layout_below="@+id/bus_btn"
        android:id="@+id/edit_get"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>