<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.launchmode.LaunchModeActivity">

    <Button
        android:id="@+id/mode_bt_1"
        android:text="single_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mode_bt_2"
        android:text="single_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mode_bt_3"
        android:text="single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mode_bt_4"
        android:text="standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:text="activity启动模式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>