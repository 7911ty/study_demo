<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/black_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="14dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/my_title_view"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/black_iv"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="moren"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/iv_right1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@+id/iv_right2"
        android:padding="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_search" />

    <ImageView
        android:id="@+id/iv_right2"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:padding="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <View
        android:id="@+id/line"
        android:layout_below="@+id/my_title_view"
        android:background="#E8E6E6"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>